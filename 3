#include <iostream>

int main()
{
    const int SIZE = 6;
    int arr[SIZE] = { 4, 1, 3, 6, 2, 5 };

    std::cout << "Original stack: ";
    for (int i = 0; i < SIZE; ++i)
    {
        std::cout << arr[i] << " ";
    }
    std::cout << "\n";

    for (int size = SIZE; size > 1; --size)
    {
        int maxIndex = 0;
        for (int i = 1; i < size; ++i)
        {
            if (arr[i] > arr[maxIndex])
            {
                maxIndex = i;
            }
        }

        if (maxIndex == size - 1)
        {
            continue;
        }

        if (maxIndex != 0)
        {
            for (int i = 0, j = maxIndex; i < j; ++i, --j)
            {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }

        for (int i = 0, j = size - 1; i < j; ++i, --j)
        {
            int temp = arr[i];
            arr[i] = arr[j];
            arr[j] = temp;
        }
    }

    std::cout << "Sorted stack: ";
    for (int i = 0; i < SIZE; ++i)
    {
        std::cout << arr[i] << " ";
    }
    std::cout << "\n";

    return 0;
}
